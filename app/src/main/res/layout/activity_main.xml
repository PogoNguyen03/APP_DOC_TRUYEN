<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >
            <TextView
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DaoComics"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/xanhduong"
                android:letterSpacing="0"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton

                android:outlineProvider="none"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnSettingDrawer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/baseline_settings_24"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fragVPmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="54dp"
            />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/colorbottomitem"
            app:itemTextColor="@color/colorbottomitem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_marginTop="24dp"
        android:id="@+id/drawerSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:itemBackground="@color/white"
        app:menu="@menu/menu_setting_drawer"
        android:background="@drawable/corner"
        app:headerLayout="@layout/nav_header_setting"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="100dp"
        app:itemTextAppearance="@style/CustomText"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/xanhduong"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:textAllCaps="false"
            android:id="@+id/btnSignOut"
            />
        <ImageView
             android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/logosplscr"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>