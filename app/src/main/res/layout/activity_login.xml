<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8EEFF"
    android:padding="16sp"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:id="@+id/imaLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/txInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="#1D8FD3"
        android:text="LOGIN INFOMATION"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imaLogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40sp"
        />

    <EditText
        android:id="@+id/edUser_log"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:drawablePadding="12sp"
        android:hint="Enter Name"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/txInfo"
        android:layout_marginTop="20sp"
        android:padding="20sp"
        />

    <EditText
        android:id="@+id/edPass_log"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_key_24"
        android:padding="20sp"
        android:drawablePadding="12sp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/edUser_log"
        android:layout_marginTop="10sp"
        />
    <Button
        android:id="@+id/btnLog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/glCenter"
        app:layout_constraintTop_toBottomOf="@+id/edPass_log"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:text="Login"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:backgroundTint="#1D8FD3"
        />
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/glCenter"
        app:layout_constraintTop_toBottomOf="@+id/edPass_log"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:text="Sign Up"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:backgroundTint="#1D8FD3"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>