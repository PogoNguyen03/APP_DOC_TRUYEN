<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EAE6E3"
    android:padding="16sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imaLogo"
        android:layout_width="72dp"
        android:layout_height="49dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="#1D8FD3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txRegister"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="ĐĂNG KÝ"
        android:textColor="#1D8FD3"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_Name"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:drawablePadding="12sp"
        android:hint="Nhập tên"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/txRegister"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20sp"
        android:paddingLeft="20sp"
        />

    <EditText
        android:id="@+id/ed_Pass"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_key_24"
        android:paddingLeft="20sp"
        android:drawablePadding="12sp"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/ed_Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <EditText
        android:id="@+id/ed_ConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_check_circle_outline_24"
        android:paddingLeft="20sp"
        android:drawablePadding="12sp"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/ed_Pass"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:id="@+id/ed_Email"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_mail_outline_24"
        android:paddingLeft="20sp"
        android:drawablePadding="12sp"
        android:hint="Nhập Email"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/ed_ConfirmPass"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:id="@+id/ed_Phone"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#1D8FD3"
        android:drawableLeft="@drawable/baseline_smartphone_24"
        android:paddingLeft="20sp"
        android:drawablePadding="12sp"
        android:hint="Nhập số điện thoại"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/ed_Email"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:padding="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_Phone"/>
    <RadioGroup
        android:id="@+id/rgSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_Phone">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Nam"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Nữ"
            android:textSize="20sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn_Reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rgSex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:text="Đăng ký"
        android:textSize="26dp"
        android:letterSpacing="0.4"
        android:layout_marginLeft="20sp"
        android:backgroundTint="#1D8FD3"
        />




</androidx.constraintlayout.widget.ConstraintLayout>